{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2019"],

    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,

    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "strictNullChecks": false,  // TODO!!
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/todo_or_old/*"
  ]
}
